<ScrollView   xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1"
    tools:context=".activity.ArticuloActivity"
    android:background="#fff"
    >
    <LinearLayout
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/artdescription"
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/points"
            style="@style/TitlearticuloStyle"
            android:textIsSelectable="true" />

        <TextView
            android:id="@+id/arttitle"
            android:gravity="start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/points"
            style="@style/TitlearticuloStyle"
            android:textIsSelectable="true"
            android:layout_marginBottom="16dp" />
        <TextView
            android:id="@+id/artcontent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/points"
            android:maxLines="9999"
            android:textIsSelectable="true"
            android:layout_marginBottom="16dp"
            />

    </LinearLayout>
</ScrollView>